<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_add_product"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nd.cashc.addProductActivity"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        style="@style/nd_addProduct">

        <TextView
            style="@style/nd_labelForEditTextDefault"
            android:text="@string/product"
            android:id="@+id/textView2"/>

        <EditText
            android:hint="@string/product_name_hint"
            style="@style/nd_editTextDefault"
            android:id="@+id/editText_Product"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        style="@style/nd_addProduct">

        <TextView
            style="@style/nd_labelForEditTextDefault"
            android:text="@string/amount"
            android:id="@+id/textView3"/>

        <EditText
            style="@style/nd_editTextDefault"
            android:hint="@string/amount_of_product_hint"
            android:inputType="numberDecimal"
            android:id="@+id/editTextAmount"/>

    </LinearLayout>

    <LinearLayout
        style="@style/nd_addProduct"
        android:orientation="horizontal">

        <TextView
            style="@style/nd_labelForEditTextDefault"
            android:text="@string/price"
            android:id="@+id/textView4"/>

        <EditText
            style="@style/nd_editTextDefault"
            android:inputType="number"
            android:id="@+id/editTextPrice"
            android:hint="@string/price_hint"
            />
    </LinearLayout>

    <Button
        android:text="@string/add_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_add_product"
        android:layout_gravity="right"
        android:layout_marginTop="5dp"/>


</LinearLayout>
