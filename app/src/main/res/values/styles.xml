<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="actionBarStyle">@style/myActionBarStyle</item>
        <item name="android:actionBarStyle">@style/myActionBarStyle</item>
    </style>




    <!-- Action bar styles -->
    <style name="myActionBarStyle" parent="@android:style/Widget.ActionBar">
        <item name="contentInsetStart">0dp</item>
        <item name="displayOptions">showCustom</item>
        <item name="background">@android:color/holo_green_dark</item>
        <item name="customNavigationLayout">@layout/custom_action_bar</item>

    </style>












    <style name="nd_addProduct">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="nd_editTextDefault">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text_drawable</item>
        <item name="android:paddingLeft">7dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_weight">0.3</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="nd_labelForEditTextDefault">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="nd_purchasesList_EditText">
        <item name="android:textSize">8sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:ems">10</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">___________________________________________________________</item>
    </style>

</resources>
